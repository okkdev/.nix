(when vim.g.neovide
  (set vim.g.neovide_cursor_animation_length 0.01)
  (set vim.g.neovide_padding_top 30)
  (set vim.g.neovide_padding_bottom 30)
  (set vim.g.neovide_padding_right 40)
  (set vim.g.neovide_padding_left 40)
  (set vim.g.neovide_theme :auto)
  (set vim.g.neovide_floating_shadow true)
  (set vim.g.neovide_floating_z_height 2)
  (set vim.g.neovide_light_angle_degrees 45)
  (set vim.g.neovide_light_radius 5))

